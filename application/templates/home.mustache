<section id="ms2ube-tv" class="block">
	<header class="tab">
		<h2>ms2ube TV</h2>
	</header>
	<ul id="playlist">
	{{#ms2ube_playlist}}
		<li>
			<h3><a href="{{link}}" rel="external" title="watch on YouTube">{{title}}</a></h3>
			{{&description}}
			<p><time>Uploaded {{timestamp}}</time></p>
		</li>
	{{/ms2ube_playlist}}
	</ul>
	<div id="ms2ube-share">
		<fb:like id="ms2ube-fb-like" class="share-plugin" href="" send="true" layout="button_count" width="160" show_faces="false" font="verdana"></fb:like>
		<iframe id="ms2ube-tweet" class="share-plugin" allowtransparency="true" frameborder="0" scrolling="no"
		        src="http://platform.twitter.com/widgets/tweet_button.html?url=http%3A%2F%2Fms2.ca&via=ms2weathergirl&count=horizontal"
		        style="width:130px; height:50px;"></iframe>
	</div>
	<div id="main-player" class="projekktor"></div>
</section>
<section id="ms2weets" class="block col span-2">
	<header class="tab">
		<h2>ms2weets</h2>
	</header>
	<div id="twitter-profile">
	{{#twitter_profile}}<h3>{{name}} (<a href="http://twitter.com/@{{screen_name}}" rel="external">@{{screen_name}}</a>)</h3>
		<div class="thumb"><a href="http://twitter.com/@{{screen_name}}" rel="external"><img src="{{profile_image_url}}" alt="Twitter profile pic" /></a></div>
		<p>{{description}}</p>
	{{/twitter_profile}}
	</div>
	<ul class="tweets tk-futura-pt">
		{{#tweets}}
			<li class="tweet">
				<p>{{& text}}</p>
				<time pubdate="{{created_at}}">{{timestamp}}</time>
			</li>
		{{/tweets}}
	</ul>
	
</section>
<section id="ms2ube-vlog" class="block col span-1">
	<header class="tab right">
		<h2>ms2ube Vlog</h2>
	</header>
	<div>Mobile videos here</div>
</section>
