		<h2>Faces of MS2</h2>
	</header>
	<ul id="team">
		{{#ms2_team}}
		<li>
			<figure>
				<img src="{{photo}}" alt="photo of {{name}}" />
				<figcaption>
					<dl>
						<dt>{{name}}</dt>
						<dd class="{{short_name}}">
							<span class="role">{{role}}</span>
							<ul class="social">
								{{#email}}<li class="email">{{&obfuscated_email}}</li>{{/email}}
								{{#social_links}}<li class="{{kind}}"><a href="{{link}}" title="{{title}}" rel="external">{{title}}</a></li>{{/social_links}}
							</ul>
						</dd>
					</dl>
				</figcaption>
			</figure>
		</li>
		{{/ms2_team}}
	</ul>
</section>
